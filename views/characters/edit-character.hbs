<h2>Edit character {{character.id}}</h2>

<form action="/character/{{character.id}}/update" method="post">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="{{character.name}}">

    <label for="occupation">Occupation</label>
    <input type="text" name="occupation" id="occupation" value="{{character.occupation}}">

    <label for="debt">In debt?</label>
    <input type="checkbox" name="debt" id="debt" value="true" {{#if character.debt}} checked="" {{/if}}>

    <label for="weapon">Weapon</label>
    <input type="text" name="weapon" id="weapon" value="{{character.weapon}}">

    <button type="submit">Submit</button>
</form>